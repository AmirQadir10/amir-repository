#include<iostream>
using namespace std;
int main(){
	int numlist[10];
	int i,sum=0,sub=0,ev=0,od=0,ze=0;
	int count=1,count2=1,count3=1,count4=1,count5=1;
	cout<<"Enter the Number \n";
	for(i=0;i<10;i++){
		cout<<i<<"=>";
		cin>>numlist[i];	
		if(numlist[i]>0){
			sum=numlist[i];
			sum=count;
			count++;
		}
		else if(numlist<0){
			sub=numlist[i];
			sub=count2;
			count2++;
		}
		else if(numlist==0){
			ze=numlist[i];
			ze=count3;
			count3++;
		}
		else if(numlist[i]%2==0){
			ev=numlist[i];
			ev=count4;
			count4++;
			
		}
		else {
			od=numlist[i];
			od=count5;
			count5++;
		}
	}
	//Output

	cout<<"================="<<endl;
	cout<<"Number of Positive "<<sum<<endl;
	cout<<"Number of Negative "<<sub<<endl;
	cout<<"Number of Even "<<ev<<endl;
	cout<<"Number of Odd "<<od<<endl;
	cout<<"Number of 0 "<<ze<<endl;
}
