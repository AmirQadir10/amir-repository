//===========================DELET=====================================
void delet(){
	char delet;
	        cout<<"                  DELETE                       "<<endl;
			cout<<"-------------------------------------------------------"<<endl;	
cout<<"PRESS TO GO  PRODUCT NO  PRODUCT NAME  QUANITY         PRICE |"<<endl;
cout<<"    1=>               "<<prod[0]<<"  "<<arr[0]<<"      "<<quan[0]  <<"             "<<                arr2[0]<<" Rups|"<<endl;
cout<<"    2=>               "<<prod[1]<<"  "<<arr[1]<<"          "<<quan[1]<<"             "<<                arr2[1]<<" Rups|"<<endl;
cout<<"    3=>               "<<prod[2]<<"  "<<arr[2]<<"        "<<quan[2]<<"             "<<                arr2[2]<<" Rups|"<<endl;
cout<<"    4=>               "<<prod[3]<<"  "<<arr[3]<<"         "<<quan[3]<<"             "<<                arr2[3]<<" Rups|"<<endl;
cout<<"    5=>               "<<prod[4]<<"  "<<arr[4]<<"           "<<quan[4]<<"            "<<                arr2[4]<<" Rups|"<<endl;
cout<<"    6=>               "<<prod[5]<<"  "<<arr[5]<<"          "<<quan[5]<<"            "<<                arr2[5]<<" Rups|"<<endl;
cout<<"------------------------------------------------------------"<<endl;
cout<<endl<<endl;
cout<<"                             Which Product you want to DELET\n";
cout<<"Enter the  Number here ";
cin>>delet;
if(delet=='1'){
	arr[0]="Zero Item";
	arr2[0]=0;
	prod[0]=0;
	quan[0]=0;
}
else if(delet=='2'){
	arr[1]="Zero Item";
	arr2[1]=0;
		prod[1]=0;
	quan[1]=0;
}
else if(delet=='3'){
	arr[2]="Zero Item";
	arr2[2]=0;
		prod[2]=0;
	quan[2]=0;
}
else if(delet=='4'){
	arr[3]="Zero Item";
	arr2[3]=0;
		prod[3]=0;
	quan[3]=0;
}
else if(delet=='5'){
	arr[4]="Zero Item";
	arr2[4]=0;
		prod[4]=0;
	quan[4]=0;
}
else if(delet=='6'){
	arr[5]="Zero Item";
	arr2[5]=0;
		prod[5]=0;
	quan[5]=0;
}	
			cout<<"-------------------------------------------------------"<<endl;	
cout<<"PRESS TO GO  PRODUCT NO  PRODUCT NAME  QUANITY         PRICE |"<<endl;
cout<<"    1=>               "<<prod[0]<<"  "<<arr[0]<<"      "<<quan[0]  <<"             "<<                arr2[0]<<" Rups|"<<endl;
cout<<"    2=>               "<<prod[1]<<"  "<<arr[1]<<"          "<<quan[1]<<"             "<<                arr2[1]<<" Rups|"<<endl;
cout<<"    3=>               "<<prod[2]<<"  "<<arr[2]<<"        "<<quan[2]<<"             "<<                arr2[2]<<" Rups|"<<endl;
cout<<"    4=>               "<<prod[3]<<"  "<<arr[3]<<"         "<<quan[3]<<"             "<<                arr2[3]<<" Rups|"<<endl;
cout<<"    5=>               "<<prod[4]<<"  "<<arr[4]<<"           "<<quan[4]<<"            "<<                arr2[4]<<" Rups|"<<endl;
